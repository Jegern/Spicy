        </Grid>
        <Grid Grid.Column="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="40px"/>
                <RowDefinition/>
                <RowDefinition Height="40px"/>
            </Grid.RowDefinitions>
            <TextBox Grid.Row="0" Grid.Column="0" Text="Найти шаблон..." HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
            <ListBox Grid.Row="1"/>
            <Button Content="Добавить шаблон" Grid.Row="2"/>
        </Grid>
    </Grid>
</Window>