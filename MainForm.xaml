                    <TextBlock x:Name="sfxTextBlock24" Text="Добавить звук" Opacity="0" Grid.Row="5" Grid.Column="3" Margin="0,71,0,0" VerticalAlignment="Top" TextWrapping="Wrap" TextAlignment="Center" Height="32"/>
