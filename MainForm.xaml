                    <Button Style="{StaticResource ButtonAnimation}" Content="Добавить звук" Grid.Row="1" Margin="10,10,20,10" Foreground="White" Background="#FF5E5F65" BorderThickness="0" FontSize="20" FontFamily="Segoe UI Semibold">
                        <Button.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="12"/>
                            </Style>
                        </Button.Resources>
                    </Button>
                </Grid>
                <Grid Grid.Column="2">
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <Button Style="{StaticResource MenuButtonAnimation}" x:Name="TemplateMenu" Grid.Row="0" Grid.Column="0" Content="ШАБЛОНЫ" Click="TemplateMenu_Click" Margin="0,10" Foreground="White" BorderBrush="#FF0089EF" BorderThickness="0,5,0,0" FontFamily="Segoe UI Semibold" FontSize="15" VerticalContentAlignment="Top">
                        <Button.LayoutTransform>
                            <TransformGroup>
                                <ScaleTransform/>
                                <SkewTransform/>
                                <RotateTransform Angle="90"/>
                                <TranslateTransform/>
                            </TransformGroup>
                        </Button.LayoutTransform>
                    </Button>
                    <Button Style="{StaticResource MenuButtonAnimation}" x:Name="SfxMenu" Grid.Row="1" Content="SFX" Click="SfxMenu_Click" Margin="0,10" Foreground="White" BorderBrush="#FF0089EF" BorderThickness="0,5,0,0" FontFamily="Segoe UI Semibold" FontSize="15" VerticalContentAlignment="Top">
                        <Button.LayoutTransform>
                            <TransformGroup>
                                <ScaleTransform/>
                                <SkewTransform/>
                                <RotateTransform Angle="90"/>
                                <TranslateTransform/>
                            </TransformGroup>
                        </Button.LayoutTransform>
                    </Button>
                </Grid>
            </Grid>
            <Grid Grid.Row="2" Margin="20,10,50,20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="120"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition/>
                    <ColumnDefinition Width="80"/>
                </Grid.ColumnDefinitions>
                <Border Grid.ColumnSpan="4" Background="#FF2B2F33" BorderThickness="0" CornerRadius="12"/>
                <Button Style="{StaticResource ButtonAnimation}" Grid.Column="0" HorizontalAlignment="Left" Width="30" Height="30" BorderThickness="0" Margin="20,0,0,0" VerticalAlignment="Center">
                    <Button.Background>
                        <ImageBrush Stretch="Uniform" ImageSource="Rewind.png"/>
                    </Button.Background>
                </Button>
                <Button Style="{StaticResource ButtonAnimation}" Grid.Column="0" Width="30" Height="30" Margin="20,0,0,0" HorizontalAlignment="Center" BorderThickness="0" VerticalAlignment="Center">
                    <Button.Background>
                        <ImageBrush Stretch="Uniform" ImageSource="Play.png"/>
                    </Button.Background>
                </Button>
                <Button Style="{StaticResource ButtonAnimation}" Grid.Column="0" Width="30" Height="30" HorizontalAlignment="Right" BorderThickness="0" Margin="0" VerticalAlignment="Center">
                    <Button.Background>
                        <ImageBrush Stretch="Uniform" ImageSource="Forward.png"/>
                    </Button.Background>
                </Button>
                <Label Grid.Column="1" Content="Название мелодии" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="White" Margin="10,0" FontSize="15" FontFamily="Segoe UI Semibold"/>
