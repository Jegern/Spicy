                <Label Grid.Column="3" Content="mm:ss" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="White" Margin="0,0,20,0"/>
            </Grid>
            <Button Style="{StaticResource ButtonAnimation}" x:Name="MasterVolumeButton" Grid.Row="2" Width="30" Height="30" VerticalAlignment="Center" HorizontalAlignment="Right" BorderThickness="0" Margin="0,10,10,20">
                <Button.Background>
                    <ImageBrush Stretch="Uniform" ImageSource="Speaker.png"/>
                </Button.Background>
            </Button>
        </Grid>
