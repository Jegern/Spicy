                                <Grid>
                                    <Ellipse x:Name="sfxButtonIcon24" Stroke="Black" Opacity="0">
                                        <Ellipse.Fill>
                                            <ImageBrush ImageSource="Plus icon.png"/>
                                        </Ellipse.Fill>
                                    </Ellipse>
                                    <Ellipse Stroke="Black"/>
                                </Grid>
