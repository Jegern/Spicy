                            </Style>
                        </Button.Resources>
                    </Button>
                    <Button x:Name="DeleteTemplateButton" Content="Удалить шаблон" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,5,0" FontFamily="Georgia" FontSize="15" Padding="8" Background="White" BorderBrush="Black" Click="DeleteTemplateButton_Click" IsEnabled="False">
                        <Button.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="8"/>
                            </Style>
                        </Button.Resources>
                    </Button>
                </Grid>
            </Grid>
            <Border BorderBrush="Black" BorderThickness="1" Grid.Row="2"/>
