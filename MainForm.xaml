            <Label Content="Один раз в " VerticalAlignment="Center" Margin="0,30,154.6,0" Height="30" HorizontalAlignment="Center" FontSize="15" Grid.Row="2"/>
            <Label Content=" секунд" VerticalAlignment="Top" Margin="125.8,30,0,0" Height="30" HorizontalContentAlignment="Right" HorizontalAlignment="Center" FontSize="15" FontFamily="Georgia" Grid.Row="2"/>
            <Button x:Name="AddSoundButton" Grid.Row="3" Content="Добавить звук" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="20,0,0,0" FontFamily="Georgia" FontSize="15" Padding="8" Background="White" BorderBrush="Black" Click="AddSoundButton_Click">
                <Button.Resources>
                    <Style TargetType="{x:Type Border}">
                        <Setter Property="CornerRadius" Value="8"/>
                    </Style>
                </Button.Resources>
            </Button>
            <Button x:Name="DeleteSoundButton" Grid.Row="3" Content="Удалить звук" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,20,0" FontFamily="Georgia" FontSize="15" Padding="8" Background="White" BorderBrush="Black" Click="DeleteSoundButton_Click" IsEnabled="False">
                <Button.Resources>
                    <Style TargetType="{x:Type Border}">
                        <Setter Property="CornerRadius" Value="8"/>
                    </Style>
                </Button.Resources>
            </Button>
        </Grid>
    </Grid>
