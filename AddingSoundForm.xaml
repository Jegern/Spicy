<Window x:Name="AddingSoundWindow" x:Class="Spicy.AddingSoundForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Spicy"
        mc:Ignorable="d"
        Title="Добавить звук" Height="210" Width="500" ResizeMode="NoResize" WindowStartupLocation="CenterOwner" Loaded="AddingSoundWindow_Loaded">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <ListBox x:Name="ListOfSounds" Grid.Column="0" Margin="0,30,0,0" SelectionChanged="ListOfSounds_SelectionChanged"/>
        <TextBox Grid.Column="0" Height="30" VerticalAlignment="Top"/>
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="60"/>
                <RowDefinition Height="60"/>
                <RowDefinition Height="60"/>
            </Grid.RowDefinitions>
            <Label Content="Громкость" Grid.Row="0" VerticalAlignment="Top" HorizontalContentAlignment="Center" Height="30" FontFamily="Georgia" FontSize="16"/>
            <Slider x:Name="SoundVolumeSlider" Grid.Row="0" HorizontalAlignment="Center" VerticalAlignment="Top" Width="162" Height="19" Maximum="1" SmallChange="0.01" IsMoveToPointEnabled="True" Value="1" TickFrequency="0.01" Margin="0,30,0,0"/>
            <Label Content="Частота повторения" Grid.Row="1" VerticalAlignment="Top" HorizontalContentAlignment="Center" Height="30" FontSize="16"/>
            <TextBox x:Name="SoundRepetitionRateTextbox" Grid.Row="1" HorizontalAlignment="Center" Height="30" TextWrapping="Wrap" VerticalAlignment="Top" Width="65" MaxLength="4" Text="0" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontFamily="Georgia" FontSize="15" Margin="0,30,0,0" GotFocus="SoundRepetitionRateTextbox_GotFocus" SelectionChanged="SoundRepetitionRateTextbox_SelectionChanged"/>
            <Label Content="Один раз в " Grid.Row="1" VerticalAlignment="Center" Height="30" HorizontalAlignment="Center" FontSize="15" Margin="0,30,154.6,0"/>
            <Label Content=" секунд" Grid.Row="1" VerticalAlignment="Top" Height="30" HorizontalContentAlignment="Right" HorizontalAlignment="Center" FontSize="15" FontFamily="Georgia" Margin="125.8,30,0,0"/>
            <Button x:Name="AddSoundButton" Content="Добавить звук" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0" FontFamily="Georgia" FontSize="15" Padding="8" Background="White" BorderBrush="Black" Grid.Row="2" Click="AddSoundButton_Click">
                <Button.Resources>
                    <Style TargetType="{x:Type Border}">
                        <Setter Property="CornerRadius" Value="8"/>
                    </Style>
                </Button.Resources>
            </Button>
        </Grid>
    </Grid>
</Window>
